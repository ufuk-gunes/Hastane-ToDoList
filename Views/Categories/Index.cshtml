@model IEnumerable<Bau302TodoList.Models.Category>

@{
    ViewBag.Title = "Kategori Listesi";
}

<h2>Kategori Listesi</h2>

<p>
    @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn red btn-outline" })
    <a class="dt-button buttons-excel buttons-html5 btn blue btn-outline" tabindex="0" aria-controls="sample_1" href="@Url.Action("ExportToExcel","Categories")" style="float:right"><span>Excele Aktar</span></a>
    <a class="dt-button buttons-excel buttons-html5 btn purple btn-outline" tabindex="0" aria-controls="sample_1" href="@Url.Action("ExportToCsv","Categories")" style="float:right"><span>Csv Aktar</span></a>

</p>
<table class="table table-striped table-hover"id="tblRecords">
    <thead>
        <tr>
            <th class="text-nowrap all">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @Class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @Class = "btn btn-success btn-sm" })
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @Class = "btn btn-danger btn-sm" })
                </td>
            </tr>

        }
    </tbody>

</table>
