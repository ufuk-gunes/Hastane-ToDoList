@model IEnumerable<Bau302TodoList.Models.ApplicationUser>

@{
    ViewBag.Title = "Kullanıcı Listesi";
}

<h2>Kullanıcı Listesi</h2>

<p>
    @Html.ActionLink("Yeni Kayıt", "Register", "Account", null, new { @class = "btn btn red btn-outline" })
    <a class="dt-button buttons-excel buttons-html5 btn blue btn-outline" tabindex="0" aria-controls="sample_1" href="@Url.Action("ExportToExcel","ApplicationUsers")" style="float:right"><span>Excele Aktar</span></a>
    <a class="dt-button buttons-excel buttons-html5 btn purple btn-outline" tabindex="0" aria-controls="sample_1" href="@Url.Action("ExportToCsv","ApplicationUsers")" style="float:right"><span>Csv Aktar</span></a>

</p>
<table class="table table-striped table-hover" id="tblRecords">
    <thead>
        <tr>
            <th class="text-nowrap all">
                E-Posta
            </th>
            <th class="text-nowrap">
                Telefon
            </th>
            <th class="text-nowrap">
                Kullanıcı Adı
            </th>
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @Class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @Class = "btn btn-success btn-sm" })
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @Class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>

</table>
